  transition: all 0.3s ease;
}
.btn-8:before{
   height: 0%;
   width: .2rem;
}
.btn-8:after {
  width: 0%;
  height: .2rem;
}
.btn-8:hover:before {
  height: 100%;
}
.btn-8:hover:after {
  width: 100%;
}
.btn-8:hover{
  background: transparent;
}
.btn-8 span:hover{
  color: #03e9f4;
}
